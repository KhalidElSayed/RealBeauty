<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/parent_layout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:fillViewport="true" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:orientation="vertical"
    android:padding="@dimen/card_margin" >

    <LinearLayout
      android:id="@+id/fragment_contact_details_telephone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/selectable"
      android:clickable="true"
      android:orientation="horizontal"
      android:paddingBottom="10dip" >

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="@string/contact_details_tel_title"
        android:textColor="@color/holo_blue_dark" />

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:text="@string/contact_details_tel"
        android:textColor="@color/text_color" />
    </LinearLayout>

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1" />

    <LinearLayout
      android:id="@+id/fragment_contact_details_email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/selectable"
      android:clickable="true"
      android:orientation="horizontal"
      android:paddingBottom="10dip" >

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="@string/contact_details_email_title"
        android:textColor="@color/holo_blue_dark" />

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:ellipsize="marquee"
        android:text="@string/contact_details_email"
        android:textColor="@color/text_color" />
    </LinearLayout>

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="2" />

    <com.realbeauty.allie.ui.widget.FontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/contact_details_booking_info_1"
      android:textColor="@color/text_color" />

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1" />

    <com.realbeauty.allie.ui.widget.FontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/contact_details_booking_info_2"
      android:textColor="@color/text_color" />

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1" />

    <com.realbeauty.allie.ui.widget.FontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/contact_details_opening_hours_title"
      android:textColor="@color/text_color" />

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="@string/contact_details_opening_hours_days_1"
        android:textColor="@color/holo_blue_dark" />

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:text="@string/contact_details_opening_hours_times_1"
        android:textColor="@color/text_color" />
    </LinearLayout>

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="@string/contact_details_opening_hours_days_2"
        android:textColor="@color/holo_blue_dark" />

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:text="@string/contact_details_opening_hours_times_2"
        android:textColor="@color/text_color" />
    </LinearLayout>

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/contact_details_opening_hours_subtitle"
      android:textColor="@color/text_color" />

    <android.Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="@string/contact_details_opening_hours_days_3"
        android:textColor="@color/holo_blue_dark" />

      <com.realbeauty.allie.ui.widget.FontTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:text="@string/contact_details_opening_hours_times_3"
        android:textColor="@color/text_color" />
    </LinearLayout>

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dip"
      android:contentDescription="@null"
      android:src="@drawable/tab_background_contact" />
  </LinearLayout>

</ScrollView>